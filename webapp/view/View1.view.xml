<mvc:View
    controllerName="com.smod.ux.customcontrol.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:custom="com.smod.ux.customcontrol.custom"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <custom:CardContainer click=".onCardClick" defaultSpan="XL2 L2 M4 S6">
                <custom:Card
                    busy="false"
                    title="Yavuz Selim"
                    description="Açıklama 1"
                    imageSrc="https://www.w3schools.com/howto/img_avatar.png"
                />
                <custom:Card
                    busy="false"
                    title="Ayşe Kırma"
                    description="Açıklama 2"
                    imageSrc="https://www.w3schools.com/howto/img_avatar2.png"
                    enabled="true"
                />
                <custom:Card
                    busy="false"
                    title="Tunahan Kır"
                    description="Açıklama 2"
                    imageSrc="https://www.w3schools.com/howto/img_avatar.png"
                    enabled="true"
                />
            </custom:CardContainer>
        </content>
    </Page>
</mvc:View>
